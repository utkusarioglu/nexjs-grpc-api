{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "_views/*": ["src/components/views/*"],
      "_providers/*": ["src/components/providers/*"],
      "_hooks/*": ["src/hooks/*"],
      "_utils/*": ["src/utils/*"],
      "_styles/*": ["src/styles/*"],
      "_services/*": ["src/services/*"],
      "_types/*": ["src/types/*"],
      "__proto/*": ["../proto/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "nodenext",
      "isolatedModules": true
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
